<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back1">

    <EditText
        android:id="@+id/loginView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_160sdp"
        android:width="@dimen/_290sdp"
        android:height="@dimen/_40sdp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:gravity="center"
        android:hint="Enter Github Login Here"
        android:paddingHorizontal="@dimen/_55sdp"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_205sdp"
        android:width="@dimen/_290sdp"
        android:height="@dimen/_45sdp"
        android:backgroundTint="@color/purple_200"
        android:text="Load Repositories"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/user_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/_30sdp"
        android:width="@dimen/_250sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_250sdp"
        android:text="User not found"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="invisible"/>



    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_290sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_270sdp"
        android:width="@dimen/_20sdp"
        android:src="@drawable/pixe"
        />



</RelativeLayout>